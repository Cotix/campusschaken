{% extends "layouts/application.html.j2" %}


{% block content %}
<div class="row my-2">
    <div class="card col-md-8 col-sm offset-md-2">
        <div class="card-body">
            <h5 class="card-title">Partij toevoegen</h5>
            <p class="card-text">
            <form action="/matches/add" method="POST">
                <div class="form-group">
                    <label for="opponent">Tegenstander</label>
                    <select class="selectpicker form-control" data-live-search="true" name="opponent" id="opponent">
                        {% for player in players %}
                        <option data-tokens="{{ player.first_name }} {{ player.last_name }}" value="{{ player.id }}">{{ player.username }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label>Mijn kleur</label><br>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="color" value="white" checked>Wit
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="color" value="black">Zwart
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Winnaar</label><br>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="winner" value="white" checked>Wit
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="winner" value="black">Zwart
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="winner" value="draw">Remise
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </p>
        </div>
    </div>
</div>
{% endblock %}
